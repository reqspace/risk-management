{
  "name": "risk-management",
  "version": "1.0.0",
  "description": "AI-powered risk and task extraction from meetings and emails",
  "main": "src/main.js",
  "author": "reqspace",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reqspace/risk-management.git"
  },
  "scripts": {
    "start": "electron .",
    "build:python": "cd python && pyinstaller --clean risk_server.spec",
    "build:react": "cd ../dashboard && npm run build && cp -r dist ../electron-app/build/webapp",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "npm run build:python && npm run build:react && electron-builder --mac --win",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.reqspace.riskmanagement",
    "productName": "Risk Management",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "python/dist/risk_server",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "reqspace",
      "repo": "risk-management",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
