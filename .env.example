# Risk Management System Environment Variables

# Anthropic API Key (required)
ANTHROPIC_API_KEY=

# ngrok Auth Token (for remote access)
NGROK_AUTH_TOKEN=

# Email Configuration (for Daily Digest & Reports)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=
EMAIL_PASSWORD=

# Project Names (comma-separated)
PROJECT_NAMES=

# Microsoft Graph API (optional - for Outlook Calendar)
MS_CLIENT_ID=
MS_TENANT_ID=
MS_CLIENT_SECRET=
MS_USER_EMAIL=

# Email Reading via IMAP (optional - for processing email attachments)
IMAP_SERVER=outlook.office365.com
IMAP_PORT=993
IMAP_PASSWORD=
